<h1><%= @ingredient.name %></h1>
<h3><u>Cocktails</u></h3>
<p>
  <% @ingredient.cocktails.each do |c| %>
  <li><%= link_to c.name, cocktail_path(c) %></li>
  <% end %>
</p>

<%= link_to "All Ingredients", ingredients_path %>
<%= link_to "Edit Ingredient", edit_ingredient_path(@ingredient) %>
<%= link_to "Delete Ingredient", ingredient_path(@ingredient), method: :delete, data: { confirm: "Are you sure you want to delete this ingredient?"} %>
