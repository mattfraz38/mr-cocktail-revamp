<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %>: <%= dose.name %></p><%= link_to "Delete", dose_path(dose, method: :delete, data:{ confirm: "Are you sure? "}) %>
<% end %>


<%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>

<%= link_to "All Cocktails", cocktails_path %>
<%= link_to "Edit Cocktail", edit_cocktail_path(@cocktail) %>
<%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail? "} %>
